{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Vite",
  "compilerOptions": {
    "strict": true,
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "useDefineForClassFields": true,
    "noEmit": true,

    "lib": ["DOM", "DOM.Iterable", "ES2024"],
    "jsx": "react-jsx",
    "types": ["vitest/globals"],

    // Set baseUrl to project root and alias src/
    "baseUrl": "./src",
    "paths": {
      //"@/*": ["src/*"],
      "@app/*": ["app/*"],
      "@components/*": ["components/*"],
      "@content/*": ["content/*"],
      "@features/*": ["features/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@providers/*": ["app/providers/*"],
      "@shared/*": ["shared/*"],
      "@store/*": ["store/*"],
      "@styles/*": ["styles/*"],
      "@types": ["types"]
    },

    // Allow JSON and TS extensions
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true, // Added

    // Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true, // Added

    // Skip type-checking libs for speed
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    // Stricter checking
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // too strict
    // "exactOptionalPropertyTypes": true,
    // too strict
    // "noUncheckedIndexedAccess": true,
    // too strict
    // "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "__tests__"],
  // Reference to node-specific tsconfig for project builds and type-checking
  "references": [{ "path": "./tsconfig.node.json" }]
}
