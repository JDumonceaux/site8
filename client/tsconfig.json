{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Vite",
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler", // Updated
    "useDefineForClassFields": true,
    "noEmit": true, // Added

    "lib": ["DOM", "DOM.Iterable", "ESNext", "ESNext.Array"],
    "jsx": "react-jsx",

    // Set baseUrl to project root and alias src/
    "baseUrl": "src",
    "paths": {
      "src/*": ["src/*"]
    },

    // Allow JSON and TS extensions
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true, // Added

    // Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "verbatimModuleSyntax": true, // Added

    // Skip type-checking libs for speed
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    // Stricter checking
    "noUnusedLocals": true, // Added
    "noUnusedParameters": true, // Added
    "noFallthroughCasesInSwitch": true // Added
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "__tests__"],
  // Reference to node-specific tsconfig for project builds and type-checking
  "references": [{ "path": "./tsconfig.node.json" }]
}
