{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Vite",
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "useDefineForClassFields": true,

    "lib": ["DOM", "DOM.Iterable", "ESNext", "ESNext.Array"],
    "jsx": "react-jsx",

    // Set baseUrl to project root and alias src/
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },

    // Allow JSON imports
    "resolveJsonModule": true,

    // Interop
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Skip type-checking libs for speed
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,

    // Source maps during dev
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "__tests__"],
  // Reference to node-specific tsconfig for project builds and type-checking
  "references": [{ "path": "./tsconfig.node.json" }]
}
