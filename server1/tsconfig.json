{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node.js Configuration for 2022",

  "compilerOptions": {
    "lib": ["ESNext", "ESNext.Array"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    // Allow absolute imports from the `src` directory
    "baseUrl": ".",
    "rootDir": "./src",
  },
  "include": ["src"],
  "exclude": ["node_modules", "./*.ts", "__test__"]
}
