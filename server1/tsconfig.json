{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 22",
  "_version": "22.0.0",

  "compilerOptions": {
    "lib": ["ESNext", "ESNext.Array"],
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    // Allow absolute imports from the `src` directory
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "./*.ts", "__test__"]
}
